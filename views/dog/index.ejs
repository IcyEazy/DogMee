<%- include("../partials/header") %>

<div class="ui main text container">
    <div class="ui huge centered header">DogMee Dogs</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% dogs.forEach(function(dog){ %>
                <div class="item">
                    <div class="image">
                        <img class="ui bordered rounded image" src="<%= dog.image1 %>" alt="image1">
                    </div>
                    <div class="content">
                        <h2>Name: <%= dog.name %></h2>
                        <h3>Breed: <%= dog.breed %></h3>
                        <div class="meta">
                            <span><h3>About: </h3></span>
                        </div>
                        <div class="description">
                            <p><%= dog.about.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui purple basic button" href="/dogs/<%= dog._id %>">Read More <span><i class="angle double right icon"></i></span></a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>